<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Modal Windows Feature Suite" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This suite groups tests for the informational modal windows.
    -->

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>
    
    <test name="Modal Component Tests (About Us, Contact)">
        <classes>
            <class name="com.spacetest.demoblaze.tests.AboutUsModalTest"/>
            <class name="com.spacetest.demoblaze.tests.ContactModalTest"/>
        </classes>
    </test>

</suite>