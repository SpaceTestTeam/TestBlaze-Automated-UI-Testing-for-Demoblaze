<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite (DemoBlaze)" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This suite runs ONLY the tests marked with the "Smoke" group.
      It's perfect for a quick sanity check after a new build.
    -->

    <!-- 
      CORRECTION: The <groups> tag must come BEFORE <parameter> tags
      to be valid according to the TestNG DTD.
    -->
    <groups>
        <run>
            <include name="Smoke"/>
        </run>
    </groups>

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>

    <test name="Smoke Tests (All Features)">
        <packages>
            <!-- Scan the entire package for tests matching the "Smoke" group -->
            <package name="com.spacetest.demoblaze.tests"/>
        </packages>
    </test>

</suite>