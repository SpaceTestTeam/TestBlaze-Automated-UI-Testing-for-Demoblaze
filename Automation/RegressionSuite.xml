<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Regression Suite (DemoBlaze)" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This is the master suite for a full regression run.
      It runs UI and API tests in parallel.
      'parallel="tests"' runs the <test> blocks below concurrently.
    -->

    <listeners>
        <!-- Add your custom reporting or retry listeners here -->
        <!-- 
        <listener class-name="com.spacetest.demoblaze.listeners.AnnotationTransformer"/>
        <listener class-name="com.spacetest.demoblaze.listeners.TestListener"/> 
        -->
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>

    <test name="UI Tests (All)">
        <!-- 
          This block runs all UI test classes in parallel.
          We explicitly list them to separate them from the API tests.
        -->
        <classes>
            <class name="com.spacetest.demoblaze.tests.AboutUsModalTest"/>
            <class name="com.spacetest.demoblaze.tests.CartPageTest"/>
            <class name="com.spacetest.demoblaze.tests.CategoryMenuTest"/>
            <class name="com.spacetest.demoblaze.tests.ContactModalTest"/>
            <class name="com.spacetest.demoblaze.tests.FooterTest"/>
            <class name="com.spacetest.demoblaze.tests.LoginPageTest"/>
            <class name="com.spacetest.demoblaze.tests.NavigationBarTest"/>
            <class name="com.spacetest.demoblaze.tests.PlaceOrderTest"/>
            <class name="com.spacetest.demoblaze.tests.ProductPageTest"/>
            <class name="com.spacetest.demoblaze.tests.ProductSliderTest"/>
            <class name="com.spacetest.demoblaze.tests.ResponsiveLayoutTest"/>
            <class name="com.spacetest.demoblaze.tests.SignupPageTest"/>
        </classes>
    </test>

    <test name="API Tests (All)">
        <!-- 
          This block runs only the API tests. 
          It runs sequentially by default (priority-driven).
        -->
        <classes>
            <class name="com.spacetest.demoblaze.tests.RestfulBookerFullTests"/>
        </classes>
    </test>

</suite>