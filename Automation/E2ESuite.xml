<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="End-to-End Flow (Signup / Purchase)" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This suite runs a critical end-to-end user flow in a specific order.
      'parallel="false"' is important to maintain the test sequence.
      This respects your 'dependsOnMethods' between Signup and Login.
    -->

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>
    
    <test name="Critical User Path (Signup -&gt; Add to Cart -&gt; Purchase)">
        <classes>
            <!-- 
              TestNG will respect the dependencies within these classes.
              1. SignupPageTest creates a user.
              2. LoginPageTest uses that new user (due to dependsOnMethods).
              3. CategoryMenuTest finds a product.
              4. ProductPageTest adds it to the cart.
              5. PlaceOrderTest checks out.
            -->
            <class name="com.spacetest.demoblaze.tests.SignupPageTest"/>
            <class name="com.spacetest.demoblaze.tests.LoginPageTest"/>
            <class name="com.spacetest.demoblaze.tests.CategoryMenuTest"/>
            <class name="com.spacetest.demoblaze.tests.ProductPageTest"/>
            <class name="com.spacetest.demoblaze.tests.CartPageTest"/>
            <class name="com.spacetest.demoblaze.tests.PlaceOrderTest"/>
        </classes>
    </test>

</suite>