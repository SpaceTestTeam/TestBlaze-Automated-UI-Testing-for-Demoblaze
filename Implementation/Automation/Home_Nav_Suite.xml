<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Homepage / Navigation Suite" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This suite tests all static/navigational components on the homepage.
    -->

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>
    
    <test name="Homepage Component Tests (Nav, Footer, Slider)">
        <classes>
            <class name="com.spacetest.demoblaze.tests.NavigationBarTest"/>
            <class name="com.spacetest.demoblaze.tests.CategoryMenuTest"/>
            <class name="com.spacetest.demoblaze.tests.ProductSliderTest"/>
            <class name="com.spacetest.demoblaze.tests.FooterTest"/>
        </classes>
    </test>

</suite>