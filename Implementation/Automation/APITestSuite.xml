<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite (Restful-Booker)" parallel="tests" thread-count="4" verbose="1">

    <!-- 
      This suite runs ONLY the API tests.
      This is useful for CI/CD pipelines where you want to run fast
      API checks before deploying and running slower UI tests.
      The tests will run sequentially based on the 'priority' 
      you defined in the test class.
    -->

    <test name="API CRUD &amp; Auth Flow">
        <classes>
            <class name="com.spacetest.demoblaze.tests.RestfulBookerFullTests"/>
        </classes>
    </test>

</suite>