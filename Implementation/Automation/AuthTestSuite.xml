<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Authentication Feature Suite (Login / Signup)" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This suite focuses exclusively on user authentication features:
      Login, Logout, and Signup.
    -->

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>
    
    <test name="Authentication Tests (Login, Logout, Signup)">
        <classes>
            <class name="com.spacetest.demoblaze.tests.LoginPageTest"/>
            <class name="com.spacetest.demoblaze.tests.SignupPageTest"/>
        </classes>
    </test>

</suite>