<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestBlaze Regression Suite" verbose="1" parallel="tests" thread-count="3">
    
    <test name="Authentication Tests">
        <classes>
            <class name="com.spacetest.demoblaze.tests.SignupPageTest"/>
            <class name="com.spacetest.demoblaze.tests.LoginPageTest"/>
        </classes>
    </test>

    <test name="Shopping Workflow Tests">
        <classes>
            <class name="com.spacetest.demoblaze.tests.ProductPageTest"/>
            <class name="com.spacetest.demoblaze.tests.CartPageTest"/>
            <class name="com.spacetest.demoblaze.tests.PlaceOrderTest"/>
        </classes>
    </test>

    <test name="Navigation and Layout Tests">
        <classes>
            <class name="com.spacetest.demoblaze.tests.NavigationBarTest"/>
            <class name="com.spacetest.demoblaze.tests.FooterTest"/>
            <class name="com.spacetest.demoblaze.tests.CategoryMenuTest"/>
            <class name="com.spacetest.demoblaze.tests.ProductSliderTest"/>
            <class name="com.spacetest.demoblaze.tests.ResponsiveLayoutTest"/>
        </classes>
    </test>

    <test name="Modals Tests">
        <classes>
            <class name="com.spacetest.demoblaze.tests.ContactModalTest"/>
            <class name="com.spacetest.demoblaze.tests.AboutUsModalTest"/>
        </classes>
    </test>

</suite>