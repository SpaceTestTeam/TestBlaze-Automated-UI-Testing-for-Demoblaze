<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UI / Responsive Validation Suite" parallel="classes" thread-count="4" verbose="1">

    <!-- 
      This suite runs tests focused on visual and layout correctness.
      It includes both the "UI" and "Responsive" groups.
    -->

    <!-- 
      CORRECTION: The <groups> tag must come BEFORE <parameter> tags
      to be valid according to the TestNG DTD.
    -->
    <groups>
        <run>
            <include name="UI"/>
            <include name="Responsive"/>
        </run>
    </groups>

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <test name="Visual Layout Tests">
        <packages>
            <package name="com.spacetest.demoblaze.tests"/>
        </packages>
    </test>

</suite>